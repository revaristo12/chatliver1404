# Configurações do CHATLIVER1404 - Produção
# Copie este arquivo para .env e edite as configurações

# =============================================================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# =============================================================================
POSTGRES_PASSWORD=chatliver1404_secure_password_change_this
REDIS_PASSWORD=chatliver1404_redis_password_change_this

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# =============================================================================
# Para Gmail, use uma senha de app: https://support.google.com/accounts/answer/185833
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app
MAIL_DEFAULT_SENDER=noreply@chatliver1404.com

# =============================================================================
# CONFIGURAÇÕES DE DOMÍNIO E SSL
# =============================================================================
# Substitua pelo seu domínio real
DOMAIN=chatliver1404.com
CERTBOT_EMAIL=admin@chatliver1404.com

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS (OPCIONAL)
# =============================================================================
# Configurações de performance
FLASK_ENV=production
DEBUG=False

# Configurações de upload
MAX_CONTENT_LENGTH=20971520  # 20MB em bytes

# Configurações de cache
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Configurações de rate limiting
RATELIMIT_DEFAULT=200 per day;50 per hour;10 per minute

# Configurações de backup
BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Configurações de monitoramento
ENABLE_METRICS=True
LOG_LEVEL=INFO

